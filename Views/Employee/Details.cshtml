
@{
    ViewBag.Title = "Details";
    ProjectASP01.Models.EmployeeModel employee = ViewBag.EmployeeDetails;
}

<style>
    .info-label {
        font-weight: 600;
        color: #555;
    }

    .info-row {
        margin-bottom: 12px;
    }
</style>
<div class="container mt-5">
    <h2 class="mb-4 text-center">Chi tiết nhân viên</h2>

    <div class="card shadow p-4 mx-auto" style="width: 900px">
        <div class="d-flex justify-contenr-center" style="width: 900px">
            <!-- Avatar + tên -->
            <div class="col-md-4 text-center mb-3">
                <img src="@employee.imageUrl_332" style="width:200px; height:150px;" class="rounded-circle mb-3" alt="Ảnh nhân viên">
                <h5 class="mb-0">@employee.Name_332</h5>
                <p class="text-muted">@employee.position_332</p>
            </div>

            <!-- Thông tin chi tiết -->
            <div class="col-md-8">
                <div class="info-row d-flex">
                    <div class="info-label col-4">Họ tên:</div>
                    <div class="col-8">@employee.Name_332</div>
                </div>
                <div class="info-row d-flex">
                    <div class="info-label col-4">Email:</div>
                    <div class="col-8">@employee.email_332</div>
                </div>
                <div class="info-row d-flex">
                    <div class="info-label col-4">Số điện thoại:</div>
                    <div class="col-8">@employee.phone_332</div>
                </div>
                <div class="info-row d-flex">
                    <div class="info-label col-4">Phòng ban:</div>
                    <div class="col-8">@employee.departmentName</div>
                </div>
                <div class="info-row d-flex">
                    <div class="info-label col-4">Vị trí:</div>
                    <div class="col-8">@employee.position_332</div>
                </div>

                <!-- Nút thao tác -->
                <div class="mt-4">
                    <a href="/Employee/Index" class="btn btn-secondary">Quay lại</a>
                    <button class="btn btn-warning">Chỉnh sửa</button>
                    <button class="btn btn-danger">Xóa</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

