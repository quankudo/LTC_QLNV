
@{
    ViewBag.Title = "Add";
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="container mt-5">
    <h2 class="mb-4 text-center">Thêm nhân viên mới</h2>

    <div class="card shadow p-4 mx-auto" style="width: 900px;">
        <form id="addEmployeeForm" enctype="multipart/form-data" method="post" action="/Employee/Add">
            <div class="row mb-3">
                <div class="col-md-4">
                    <label for="fullName" class="form-label">Họ tên</label>
                    <input type="text" class="form-control" id="fullName" name="Name_332" required>
                </div>
                <div class="col-md-4">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="" name="email_332" required>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4">
                    <label for="phone" class="form-label">Số điện thoại</label>
                    <input type="text" class="form-control" name="phone_332" required>
                </div>
                <div class="col-md-4">
                    <label for="department" class="form-label">Phòng ban</label>
                    <select class="form-select" id="department" name="departmentId_332" required>
                        <option value="" disabled selected>-- Chọn phòng ban --</option>
                        @foreach (ProjectASP01.Models.DepartmentModel department in ViewBag.ListDepartment)
                        {
                            <option value="@department.id_332">@department.name_332</option>
                        }
                    </select>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4">
                    <label for="position" class="form-label">Chức vụ</label>
                    <input type="text" class="form-control" name="position_332" required>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4">
                    <label for="image" class="form-label">Ảnh đại diện</label>
                    <input type="file" class="form-control" id="imageUrl_332" name="imageFile" accept="image/*">
                </div>
                <div class="col-md-4">
                    <img id="previewImage" src="#" alt="Ảnh xem trước" class="img-thumbnail mt-2 d-none" width="250" />
                </div>
            </div>
            <div class="d-flex justify-content-end mt-4">
                <button type="reset" class="btn btn-secondary me-2">Huỷ</button>
                <button type="submit" class="btn btn-primary">Lưu</button>
            </div>
        </form>
    </div>
</div>

<script>
    document.getElementById("imageUrl_332").addEventListener("change", function () {
        const file = this.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function (e) {
                const img = document.getElementById("previewImage");
                img.src = e.target.result;
                img.classList.remove("d-none");
            };
            reader.readAsDataURL(file);
        }
    });
</script>
